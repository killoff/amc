<mapping strict="0">
    <wrapper>billingAddress</wrapper>
    <fields>
        <firstname />
        <lastname />
        <email>
            <selector>[name='customerDetails[email]']</selector>
        </email>
        <company />
        <street>
            <selector>[name='billingAddress[street][0]']</selector>
        </street>
        <city />
        <region_id>
            <input>select</input>
        </region_id>
        <postcode />
        <country_id>
            <input>select</input>
        </country_id>
        <telephone />
    </fields>
</mapping>
