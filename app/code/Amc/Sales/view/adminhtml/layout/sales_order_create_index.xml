<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="data">
            <action method="setTemplate"><argument name="template" xsi:type="string">Amc_Sales::order/create/data.phtml</argument></action>
        </referenceBlock>

        <referenceBlock name="search">
            <action method="setTemplate"><argument name="template" xsi:type="string">Amc_Sales::order/create/search.phtml</argument></action>
        </referenceBlock>

        <referenceBlock name="items_grid">
            <action method="setTemplate"><argument name="template" xsi:type="string">Amc_Sales::order/create/items/grid.phtml</argument></action>
        </referenceBlock>

        <referenceBlock name="form_account">
            <action method="setTemplate"><argument name="template" xsi:type="string">Amc_Sales::order/create/form/account.phtml</argument></action>
        </referenceBlock>

        <referenceBlock name="shipping_address">
            <action method="setTemplate"><argument name="template" xsi:type="string">Amc_Sales::order/create/form/address.phtml</argument></action>
        </referenceBlock>

        <referenceBlock name="billing_address">
            <action method="setTemplate"><argument name="template" xsi:type="string">Amc_Sales::order/create/form/address.phtml</argument></action>
        </referenceBlock>

        <move element="coupons" destination="data" />

        <!-- remove not applicable blocks from sidebar -->
        <referenceBlock name="cart" remove="true" />
        <referenceBlock name="wishlist" remove="true" />
        <referenceBlock name="viewed" remove="true" />
        <referenceBlock name="compared" remove="true" />
        <referenceBlock name="pcompared" remove="true" />
        <referenceBlock name="pviewed" remove="true" />
    </body>
</page>
