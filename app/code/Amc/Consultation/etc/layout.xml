<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Amc_Consultation:etc/layout.xsd">
    <layout name="generic" label="Generic">
        <field name="user_date" type="date" label="Date" required="1" />
        <field name="comment" type="editor" label="Comment" required="1" />
        <field name="conclusion" type="editor" label="Conclusion" wysiwyg="true" state="html" style="height: 250px;" />
        <field name="recommendation" type="editor" label="Recommendation" />
    </layout>
    <layout name="uzi" label="USD">
        <field name="comment" type="textarea" />
        <field name="conclusion" type="textarea" />
        <field name="recommendation" type="protocol" protocol_id="12" />
    </layout>
</config>
