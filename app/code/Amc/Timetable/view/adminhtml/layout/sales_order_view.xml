<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="fullcalendar-scheduler-1.0.2/lib/fullcalendar.min.css"/>
        <css src="fullcalendar-scheduler-1.0.2/scheduler.min.css"/>
    </head>
    <body>
        <referenceContainer name="js">
            <block class="Magento\Backend\Block\Template" name="order.create.timetable.js" template="Amc_Timetable::order/timetable-js.phtml"/>
        </referenceContainer>
        <referenceBlock name="sales_order_tabs">
            <action method="addTab">
                <argument name="name" xsi:type="string">order_timetable</argument>
                <argument name="block" xsi:type="string">Amc\Timetable\Block\Adminhtml\Order\Tab\Timetable</argument>
            </action>
        </referenceBlock>
    </body>
</page>
